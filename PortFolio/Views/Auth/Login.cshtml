<head>
    <meta charset="utf-8" />
    <title>Connectez-vous</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/admin/images/favicon.ico">

    <!-- App css -->

    <link href="~/admin/css/app.min.css" rel="stylesheet" type="text/css" id="app-style" />

    <!-- icons -->
    <link href="~/admin/css/icons.min.css" rel="stylesheet" type="text/css" />

</head>

<body class="loading authentication-bg authentication-bg-pattern">

    <div class="account-pages my-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-4">
                    <div class="text-center">
                        <a href="#">
                            <img src="~/admin/images/logo-dark.png" alt="" height="22" class="mx-auto">
                        </a>
                        <p class="text-muted mt-2 mb-4">Page de connexion</p>

                    </div>

                    <div class="card">
                        <div class="card-body p-4">

                            <div class="text-center mb-4">
                                <h4 class="text-uppercase mt-0">Connectez-vous</h4>
                            </div>

                            <form asp-action="FormLogin" method="post" asp-controller="Home">
                                <div class="mb-3">
                                    <label for="emailaddress" class="form-label">Pseudo ou email</label>
                                    <input class="form-control" type="text" id="emailaddress" name="Pseudo" required 
                                    placeholder="Saisissez votre pseudo ou votre email">
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Mot de passe</label>
                                    <input class="form-control" type="password" required name="Password" id="password"
                                    placeholder="Saisissez votre mot de passe">
                                </div>
                                <div class="mb-3 d-grid text-center">
                                    <button class="btn btn-primary" type="submit"> Connexion </button>
                                </div>
                            </form>

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->

                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <p> <a href="#" class="text-muted ms-1"><i class="fa fa-lock me-1"></i>Mot de passe oublié?</a></p>
                        </div> <!-- end col -->
                    </div>
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->
    <!-- Vendor -->
    <script src="~/admin/libs/jquery/jquery.min.js"></script>
    <script src="~/admin/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/admin/libs/simplebar/simplebar.min.js"></script>
    <script src="~/admin/libs/node-waves/waves.min.js"></script>
    <script src="~/admin/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/admin/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/admin/libs/feather-icons/feather.min.js"></script>

    <!-- App js -->
    <script src="~/admin/js/app.min.js"></script>

</body>

