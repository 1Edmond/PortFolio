@model Categorie
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = $"Détails sur la catégorie {Model.Libelle}";

}

@section Content{
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center mt-4 mb-5">
                            <div class="d-inline-block" id="logo-tour">
                                <div class="auth-logo">
                                    <div class="logo logo-light">
                                        <span class="logo-lg">
                                            <img src="assets/images/logo-light.png" alt="" height="22">
                                        </span>
                                    </div>

                                    <div class="logo logo-dark">
                                        <span class="logo-lg">
                                            <img src="assets/images/logo-dark.png" alt="" height="22">
                                        </span>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <form asp-action="UpdateCategorie" id="MyForm" method="post" asp-controller="Admin">
                            <div class="row justify-content-center">
                            <div class="col-lg-5">
                                    
                                        <label class="mb-1 fw-medium text-muted">Libelle</label>
                                        <p class="text-muted font-13">
                                            Le libelle de la catégorie
                                        </p>
                                        <input type="text" class="form-control" value="@Model.Libelle" required name="Libelle"
                                           placeholder="Saisissez le libelle de la catégorie" />
                                           <input type="text" class="form-control" value="@Model.Id" required name="Id" hidden />
                                        <div>
                                            <label class="mb-1 mt-4 fw-medium text-muted">Description</label>
                                            <p class="text-muted font-13">
                                                La description de la catégorie. Ce champ peu être vide.
                                            </p>
                                            <input type="text" required value="@Model.Description" name="Description" class="form-control"
                                               placeholder="Saisissez la description de la catégorie" />
                                        </div>
                                        <br />
                                </div>
                            </div>
                         </form>
                        <div class="text-center mt-5">
                                <a data-bs-toggle="modal" data-bs-target="#updateModal"
                                class="btn btn-success rounded-pill waves-effect waves-light">
                                <span class="btn-label"><i class="mdi mdi-check-all"></i></span>Modifier
                            </a>
                                <a class="btn btn-danger rounded-pill waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#deleteModal">
                                <span class="btn-label"><i class="mdi mdi-close-circle-outline"></i></span>Supprimer
                            </a>
                        </div>
                    </div> <!-- end card-box -->
                </div>

            </div> <!-- end col -->
        </div>
        <!-- end row-->
        <div id="updateModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="text-center">
                            <i class="dripicons-information h1 text-info"></i>
                            <h4 class="mt-2">Confirmer la modification</h4>
                            <p class="mt-3">
                                Vous confirmer vouloir modifier la catégorie @Model.Libelle?
                            </p>
                            <button type="button" id="ConfirmUpdate" onclick="ValidateForm()" class="btn btn-info my-2">Oui</button>
                            <button type="button" id="ConfirmUpdate" class="btn btn-light my-2" data-bs-dismiss="modal">Non</button>
                        </div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div>

        <div id="deleteModal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content modal-filled bg-danger">
                    <div class="modal-body">
                        <div class="text-center">
                            <i class="dripicons-wrong h1 text-white"></i>
                            <h4 class="mt-2 text-white">Confirmer la suppression</h4>
                            <p class="mt-3 text-white">
                                Vous confirmer vouloir supprimer la catégorie @Model.Libelle?
                            </p>
                            <a asp-action="CategorieDelete" asp-controller="Admin" asp-route-id=@Model.Id
                            type="button" class="btn btn-light my-2" >Oui</a>
                            <button type="button" class="btn btn-info my-2" data-bs-dismiss="modal">Non</button>
                        </div>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div>

    </div>
}

@section Scripts{
    <script>
        function ValidateForm(){
            document.getElementById("MyForm").submit();
        }


    </script>
}