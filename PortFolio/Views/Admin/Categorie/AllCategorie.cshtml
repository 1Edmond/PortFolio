@model List<Categorie>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Toutes les catégories";

}


@section Content{
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="mt-0 header-title">@ViewData["Title"]</h4>
                        <p class="text-muted font-14 mb-3">
                           Liste des différentes catégories disponibles.
                        </p>

                        <table id="AllCategorie" class="table table-striped table-hover table-bordered dt-responsive nowrap">
                            <thead>
                                <tr>
                                    <th class="text-center">Libelle</th>
                                    <th class="text-center">Description</th>
                                    <th class="text-center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(Categorie cat in Model){
                                    <tr>
                                        <td class="text-center">@cat.Libelle</td>
                                        <td class="text-center">@cat.Description</td>
                                        <td class="text-center d-flex justify-content-around" id="tooltip-container">
                                            <a type="button" data-bs-toggle="tooltip" asp-action="CategorieDetails" asp-controller="Admin" asp-route-id=@cat.Id
                                            title="Voir @cat.Libelle" data-bs-container="#tooltip-container" data-bs-placement="top"
                                                class="btn btn-success waves-effect waves-light ml-5"><i class="fas fa-arrow-right"></i></a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                       
                    </div>
                </div>

            </div>
        </div>
    </div>

}

    @section Scripts {
    <script src="~/admin/libs/tippy.js/tippy.all.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#AllCategorie').DataTable({
                language: {
                    url: "/DataTables/French.json"
                },
            });
        });
      
    </script>


}